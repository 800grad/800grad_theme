{% extends 'partials/base.html.twig' %}

{% block content %}
    <section class="wrapper padding margin">
        {{ page.content }}
        <div class="cards">
            {% for image in page.media.images|reverse %}
            <div class="card">
                <figure class="cardimage">
                    <img data-src="{{image.url}}" class="unveil">
                    <figcaption>{% if image.Caption != "" %}{{image.Caption}}{% endif %}</figcaption>
                </figure>
            </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}